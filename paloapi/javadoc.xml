<?xml version="1.0" encoding="UTF-8"?>
<project default="javadoc">
	<target name="javadoc">
		<javadoc 
			access="public" 
			author="false" 
			stylesheetfile="javadocstyle.css" 
			classpath="../palo/bin" 
			destdir="doc" 
			doctitle="JPalo / Java API for Palo" 
			nodeprecated="false" nodeprecatedlist="false" 
			noindex="false" nonavbar="false" notree="false" 
			source="1.5" sourcepath="src" 
			splitindex="true" use="true" version="true">
			<packageset dir="src">
				<include name="org/palo/api/**"/>
				<exclude name="org/palo/api/**/*impl*/**"/>
			</packageset>
		</javadoc>
	</target>
</project>
