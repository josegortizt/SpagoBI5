<?xml version="1.0" encoding="ISO-8859-15"?>
<DATA_MINING>
    <PARAMETERS>
        <PARAMETER name="par1" />
        <PARAMETER name="par2" />
        <PARAMETER name="par3" />
    </PARAMETERS> 
	<SCRIPTS>  
        <SCRIPT name="timescript1" mode="auto" datasets="datasetA" label="timeplus 1">
			<![CDATA[
str(datasetA);
datasetA$time;
time_plus<-datasetA$time+1;
time_plus;
			]]>
		</SCRIPT>
		<SCRIPT name="timescript2" mode="manual" datasets="datasetB" label="timeplus 2">
			<![CDATA[
str(datasetB);
datasetB$time;
time_plus2<-datasetB$time+5;
time_plus2;
			]]>
		</SCRIPT>
	</SCRIPTS>	
	<DATASETS>
		<DATASET name="datasetA" readType="table" type="file" label="Data set 1">	
			<![CDATA[header = TRUE, sep = ",", quote = "\""]]>
		</DATASET>
		<DATASET name="datasetB" readType="csv" type="file" label="Data set 2">
			<![CDATA[header = TRUE, sep = ",", quote = "\""]]>
		</DATASET>
	</DATASETS>	
	<COMMANDS>
        <COMMAND name="command1" scriptName="timescript1"  label="Command1" mode="auto">
            <OUTPUTS>
                <OUTPUT type="text" name="time_plus" value="time_plus"  mode="auto" label="Time plus"/>
            </OUTPUTS>
        </COMMAND>
        <COMMAND name="command2" scriptName="timescript2"  label="Command2" mode="manual">
            <OUTPUTS>
                <OUTPUT type="text" name="time_plus2" value="time_plus2"  mode="manual" label="Time plus + 5"/>
            </OUTPUTS>
        </COMMAND>
    </COMMANDS>
</DATA_MINING>